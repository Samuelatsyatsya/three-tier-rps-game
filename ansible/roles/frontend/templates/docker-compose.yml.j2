version: "3.9"

services:
  frontend:
    image: "{{ frontend_image }}"
    container_name: frontend
    restart: unless-stopped
    ports:
      - "{{ frontend_port }}:{{ frontend_port }}"
    environment:
      API_URL: "http://backend:{{ backend_port }}"
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
