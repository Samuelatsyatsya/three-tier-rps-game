services:
  backend:
    image: "{{ backend_image }}"
    container_name: backend
    restart: unless-stopped
    environment:
      NODE_ENV: "production"
      DB_SECRET_NAME: "{{ db_secret_name }}"
      AWS_REGION: "{{ aws_region }}"
    networks:
      - app-network

networks:
  app-network:
    external: true
